{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build with OpenCV",
            "type": "shell",
            "command": "gcc",
            "args": [
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}",
                "$(pkg-config --cflags --libs opencv4)" 
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"]
        }
    ]
}